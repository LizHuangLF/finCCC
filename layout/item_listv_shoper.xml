<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView android:id="@+id/iv_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="10dp">
        <TextView android:id="@+id/tv_date"
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021/03/30"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>
        <TextView android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搭配"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小类"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView android:id="@+id/tv_works"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作用"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价钱"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:layout_gravity="center"/>


</LinearLayout>