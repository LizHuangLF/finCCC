<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView android:id="@+id/g_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/yellow">

        <TableRow android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <ImageView android:id="@+id/giv_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_btn_in"/>

            <TextView android:id="@+id/gtv_name"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/tv_name"/>

            <ImageView android:id="@+id/giv_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_btn_in"/>

            <ImageView android:id="@+id/giv_heart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_btn_in"/>

<!--            <ImageView android:id="@+id/giv_message"-->
<!--                android:layout_width="25dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:background="@drawable/shape_btn_in"/>-->
        </TableRow>
        <TextView android:id="@+id/gtv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGhostWhite"/>
    </LinearLayout>


</LinearLayout>